<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CppTests"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        style="@style/TextAppearance.AppCompat.Button"
        android:text="@string/cpptests1"
        android:layout_marginVertical="15dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical">

            <Button
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="@string/cpptests2"
                android:backgroundTint="#ffff80"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/b11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/tests11"
                android:backgroundTint="#b3d9ff"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/b12"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/tests12"
                android:backgroundTint="#b3d9ff"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/b13"
                android:layout_width="match_parent"
                android:backgroundTint="#b3d9ff"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/tests13"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical">

            <Button
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="@string/cpptests3"
                android:gravity="center"
                android:backgroundTint="#b3ff99"
                android:layout_gravity="center_horizontal"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/b21"
                android:backgroundTint="#b3d9ff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/tests11"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/b22"
                android:backgroundTint="#b3d9ff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/tests12"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/b23"
                android:backgroundTint="#b3d9ff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/tests13"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical">

            <Button
                android:id="@+id/b3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="@string/cpptests4"
                android:gravity="center"
                android:backgroundTint="#eb99ff"
                android:layout_gravity="center_horizontal"
                tools:ignore="NestedWeights" />

            <Button
                android:id="@+id/b31"
                android:backgroundTint="#b3d9ff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/tests11"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/b32"
                android:backgroundTint="#b3d9ff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/tests12"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/b33"
                android:backgroundTint="#b3d9ff"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/tests13"
                android:gravity="center"
                android:layout_gravity="center_horizontal"/>


        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>